{
  "name": "niiknow/bayes",
  "description": "a machine learning lib",
  "keywords": ["bayes","niiknow","naive-bayes"],
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Noogen",
      "email": "friends@niiknow.org"
    },
    {
      "name": "Ondrej Maly",
      "email": "lykantrop@yahoo.co.uk"
    }
  ],
  "type": "library",
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "Niiknow\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "prefer-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": [
        "phpunit tests/*.php"
    ]
  }
}
